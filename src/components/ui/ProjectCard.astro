---
import { ArrowUpRight } from "lucide-react";

interface Metric {
    label: string;
    value: string;
}

interface Props {
    title: string;
    description: string;
    badges: string[];
    metrics: Metric[];
    link: string;
}

const { title, description, badges, metrics, link } = Astro.props;
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative block h-full overflow-hidden rounded-2xl bg-black/5 dark:bg-white/5 p-8 transition-all duration-500 hover:bg-black/10 dark:hover:bg-white/10 hover:-translate-y-1"
>
    <div class="mb-6 flex items-start justify-between">
        <div class="flex flex-wrap gap-2">
            {
                badges.map((badge) => (
                    <span class="rounded-full border border-black/10 dark:border-white/10 bg-black/5 dark:bg-white/5 px-3 py-1 text-xs font-medium uppercase tracking-wider text-gray-600 dark:text-gray-400">
                        {badge}
                    </span>
                ))
            }
        </div>
        <ArrowUpRight
            className="h-6 w-6 text-gray-500 dark:text-gray-400 transition-colors group-hover:text-signal-emerald"
        />
    </div>

    <h3 class="mb-4 font-display text-2xl font-bold text-black dark:text-white">
        {title}
    </h3>

    <p class="mb-8 text-sm leading-relaxed text-gray-600 dark:text-gray-400">
        {description}
    </p>

    <div
        class="grid grid-cols-2 gap-4 border-t border-black/10 dark:border-white/10 pt-6"
    >
        {
            metrics.map((metric) => (
                <div>
                    <p class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-500 mb-1">
                        {metric.label}
                    </p>
                    <p class="font-display text-lg font-bold text-black dark:text-white">
                        {metric.value}
                    </p>
                </div>
            ))
        }
    </div>
</a>
