---
interface Props {
    title: string;
    author: string;
    status: "recommended" | "read" | "want-to-read";
    genre: string;
    link: string;
    cover?: string;
    rating: number;
    review?: string;
}

const { title, author, status, genre, link, cover, rating, review } =
    Astro.props;

const fallbackCover = `https://placehold.co/600x800/000000/FFFFFF?text=${encodeURIComponent(title)}`;
const bookCover = cover || fallbackCover;

const statusStyles = {
    recommended:
        "bg-signal-emerald/10 text-signal-emerald border-signal-emerald/20",
    read: "bg-blue-500/10 text-blue-500 border-blue-500/20",
    "want-to-read": "bg-orange-500/10 text-orange-500 border-orange-500/20",
};

const statusLabels = {
    recommended: "Highly Recommended",
    read: "Read",
    "want-to-read": "Reading List",
};
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex flex-col bg-white dark:bg-void-black border border-black/5 dark:border-white/5 overflow-hidden transition-all duration-500 hover:scale-[1.02] hover:shadow-2xl hover:shadow-black/10 dark:hover:shadow-white/5 reveal"
>
    <div class="aspect-[3/4] overflow-hidden bg-gray-100 dark:bg-gray-900">
        <img
            src={bookCover}
            alt={`Cover of ${title}`}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            loading="lazy"
        />
        <div class="absolute top-4 left-4 z-10">
            <span
                class={`text-[10px] font-bold uppercase tracking-widest px-2 py-1 border ${statusStyles[status]}`}
            >
                {statusLabels[status]}
            </span>
        </div>
    </div>

    <div class="p-6 flex flex-col flex-grow">
        <div class="flex justify-between items-start mb-2">
            <span
                class="text-[10px] font-bold uppercase tracking-widest text-black/40 dark:text-white/40"
            >
                {genre}
            </span>
            {
                rating > 0 && (
                    <div class="flex gap-0.5">
                        {[...Array(5)].map((_, i) => (
                            <svg
                                class={`w-3 h-3 ${i < rating ? "text-signal-emerald" : "text-gray-300 dark:text-gray-700"}`}
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        ))}
                    </div>
                )
            }
        </div>

        <h3
            class="text-xl font-display font-bold text-black dark:text-white mb-1 group-hover:text-signal-emerald transition-colors"
        >
            {title}
        </h3>
        <p
            class="text-sm text-black/60 dark:text-white/60 font-medium mb-4 italic"
        >
            by {author}
        </p>

        {
            review && (
                <p class="text-sm text-black/80 dark:text-white/80 line-clamp-3 mt-auto">
                    "{review}"
                </p>
            )
        }

        <div
            class="mt-6 flex items-center text-[10px] font-black uppercase tracking-widest text-black dark:text-white group-hover:translate-x-2 transition-transform"
        >
            View Details
            <svg
                class="w-3 h-3 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
        </div>
    </div>
</a>
