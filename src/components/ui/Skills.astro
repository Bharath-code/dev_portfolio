---
interface Props {
    items: string[];
}

const { items } = Astro.props;

// Map display names to skillicons identifiers
// Most correlate directly when lowercased, but some need mapping
const getIconId = (name: string) => {
    const n = name.toLowerCase();
    if (n === "node.js") return "nodejs";
    if (n === "next.js") return "nextjs";
    return n;
};
---

<div class="flex flex-wrap gap-4 justify-center">
    {
        items.map((item) => (
            <div class="group relative flex flex-col items-center gap-2">
                <div class="relative overflow-hidden rounded-xl bg-white/5 p-3 transition-all duration-300 hover:scale-110 hover:bg-white/10 hover:shadow-lg hover:shadow-signal-emerald/20 border border-white/5 hover:border-white/20">
                    <img
                        src={`https://skillicons.dev/icons?i=${getIconId(item)}`}
                        alt={item}
                        class="h-12 w-12 object-contain"
                        loading="lazy"
                        width="48"
                        height="48"
                    />
                </div>
                <span class="opacity-0 translate-y-2 text-xs font-medium text-gray-400 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0 absolute -bottom-6 whitespace-nowrap">
                    {item}
                </span>
            </div>
        ))
    }
</div>
