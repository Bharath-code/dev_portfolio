---
interface Props {
    as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
    class?: string;
    variant?: "display" | "section" | "title";
}

const { as: Tag = "h2", class: className, variant = "section" } = Astro.props;

const variants = {
    display:
        "font-display text-5xl md:text-7xl lg:text-9xl leading-[0.9] tracking-tighter text-white uppercase",
    section:
        "font-display text-2xl md:text-4xl leading-tight tracking-tight text-white uppercase mb-8",
    title: "font-sans text-xl font-medium text-white",
};
---

<Tag class:list={[variants[variant as keyof typeof variants], className]}>
    <slot />
</Tag>
