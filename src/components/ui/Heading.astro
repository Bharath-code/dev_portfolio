---
interface Props {
    as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
    class?: string;
    variant?: "display" | "section" | "title" | "card";
    parallax?: boolean;
}

const {
    as: Tag = "h2",
    class: className,
    variant = "section",
    parallax = false,
} = Astro.props;

const variants = {
    display:
        "font-display text-5xl md:text-7xl lg:text-8xl font-black uppercase tracking-tighter text-black dark:text-white",
    section:
        "font-display text-3xl md:text-4xl font-black uppercase tracking-widest text-black dark:text-white",
    card: "font-display text-2xl font-bold tracking-tight text-black dark:text-white",
    title: "font-sans text-xl font-medium text-black dark:text-white",
};
const parallaxSpeed = parallax ? (variant === "display" ? "0.2" : "0.1") : null;
---

<Tag
    class:list={[variants[variant as keyof typeof variants], className]}
    data-parallax={parallaxSpeed}
>
    <slot />
</Tag>
