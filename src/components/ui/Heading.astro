---
interface Props {
    as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
    class?: string;
    variant?: "display" | "section" | "title" | "card";
}

const { as: Tag = "h2", class: className, variant = "section" } = Astro.props;

const variants = {
    display:
        "font-display text-5xl md:text-7xl lg:text-8xl font-bold tracking-tighter text-black dark:text-white",
    section:
        "font-display text-3xl md:text-4xl font-bold tracking-tight text-black dark:text-white",
    card: "font-display text-2xl font-bold tracking-tight text-black dark:text-white",
    title: "font-sans text-xl font-medium text-black dark:text-white",
};
---

<Tag class:list={[variants[variant as keyof typeof variants], className]}>
    <slot />
</Tag>
