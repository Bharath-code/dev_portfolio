---
/**
 * Now Playing Widget
 * Shows what you're currently listening to on Spotify/Last.fm
 * Uses Last.fm API (simpler than Spotify OAuth)
 */

// Last.fm configuration - update with your username
const LASTFM_USER = "bharathkumar";
const LASTFM_API_KEY = import.meta.env.LASTFM_API_KEY || "";

interface Track {
    name: string;
    artist: string;
    album: string;
    image: string;
    url: string;
    nowPlaying: boolean;
}

async function fetchNowPlaying(): Promise<Track | null> {
    if (!LASTFM_API_KEY) {
        return null;
    }

    try {
        const response = await fetch(
            `https://ws.audioscrobbler.com/2.0/?method=user.getrecenttracks&user=${LASTFM_USER}&api_key=${LASTFM_API_KEY}&format=json&limit=1`,
        );
        const data = await response.json();
        const track = data?.recenttracks?.track?.[0];

        if (!track) return null;

        return {
            name: track.name,
            artist: track.artist["#text"],
            album: track.album["#text"],
            image: track.image?.[2]?.["#text"] || "",
            url: track.url,
            nowPlaying: track["@attr"]?.nowplaying === "true",
        };
    } catch (error) {
        console.error("Failed to fetch Last.fm data:", error);
        return null;
    }
}

const track = await fetchNowPlaying();

// Fallback/mock data for when API key is not set
const mockTrack: Track = {
    name: "Blinding Lights",
    artist: "The Weeknd",
    album: "After Hours",
    image: "",
    url: "#",
    nowPlaying: false,
};

const displayTrack = track || mockTrack;
const isLive = track?.nowPlaying || false;
---

{
    displayTrack && (
        <div class="now-playing">
            <div class="np-icon">
                {isLive ? (
                    <div class="sound-bars">
                        <span />
                        <span />
                        <span />
                    </div>
                ) : (
                    <svg
                        class="w-4 h-4 text-signal-emerald"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z" />
                    </svg>
                )}
            </div>
            <a
                href={displayTrack.url}
                target="_blank"
                rel="noopener noreferrer"
                class="np-content"
            >
                <span class="np-label">
                    {isLive ? "Now Playing" : "Last Played"}
                </span>
                <span class="np-track">{displayTrack.name}</span>
                <span class="np-artist">{displayTrack.artist}</span>
            </a>
        </div>
    )
}

<style>
    .now-playing {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 0.5rem;
        max-width: 250px;
    }

    .np-icon {
        flex-shrink: 0;
    }

    .sound-bars {
        display: flex;
        align-items: flex-end;
        gap: 2px;
        height: 16px;
    }

    .sound-bars span {
        width: 3px;
        background: #10b981;
        border-radius: 1px;
        animation: soundBar 0.6s ease-in-out infinite;
    }

    .sound-bars span:nth-child(1) {
        height: 60%;
        animation-delay: 0s;
    }
    .sound-bars span:nth-child(2) {
        height: 100%;
        animation-delay: 0.2s;
    }
    .sound-bars span:nth-child(3) {
        height: 40%;
        animation-delay: 0.4s;
    }

    @keyframes soundBar {
        0%,
        100% {
            transform: scaleY(1);
        }
        50% {
            transform: scaleY(0.5);
        }
    }

    .np-content {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
        overflow: hidden;
        transition: opacity 0.2s;
    }

    .np-content:hover {
        opacity: 0.8;
    }

    .np-label {
        font-size: 0.625rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #10b981;
    }

    .np-track {
        font-size: 0.875rem;
        font-weight: 500;
        color: white;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .np-artist {
        font-size: 0.75rem;
        color: #666;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
