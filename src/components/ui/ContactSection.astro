---
/**
 * Enhanced Contact Section
 * A premium split-screen contact experience with:
 * - Animated mesh gradient background
 * - Staggered text reveals
 * - Magnetic social links with hover effects
 * - Availability status indicator
 */
import { siteContent } from "@/content/site-content";
---

<section id="contact" class="contact-section">
    <!-- Animated Mesh Background -->
    <div class="mesh-container" aria-hidden="true">
        <canvas id="contact-mesh"></canvas>
    </div>

    <div class="contact-content">
        <div class="contact-grid">
            <!-- Left Column: CTA -->
            <div class="contact-cta">
                <div class="availability-badge reveal-contact">
                    <span class="pulse-dot"></span>
                    <span class="badge-text">Available for new projects</span>
                </div>

                <h2 class="contact-heading reveal-contact">
                    <span class="line">Let's build</span>
                    <span class="line accent">something epic</span>
                    <span class="line">together.</span>
                </h2>

                <p class="contact-subtext reveal-contact">
                    Whether you're looking for a technical co-founder, a senior
                    engineer to scale your team, or want to collaborate on
                    open-source — I'm always open to interesting conversations.
                </p>

                <div class="contact-methods reveal-contact">
                    <a
                        href={`mailto:${siteContent.contact.email}`}
                        class="primary-cta"
                        data-magnetic
                    >
                        <span class="cta-text">Start a conversation</span>
                        <span class="cta-arrow">→</span>
                    </a>
                    <span class="or-divider">or</span>
                    <a
                        href="https://calendly.com/kumarbharath63/recruit"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="secondary-cta"
                        data-magnetic
                    >
                        Schedule a 15-min call
                    </a>
                </div>
            </div>

            <!-- Right Column: Social Grid -->
            <div class="social-column">
                <div class="social-grid reveal-contact">
                    {
                        siteContent.contact.socials.map((social, index) => (
                            <a
                                href={social.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="social-card"
                                data-magnetic
                                style={`--delay: ${index * 0.1}s`}
                            >
                                <span class="social-icon">
                                    {social.label === "Twitter" && (
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                                        </svg>
                                    )}
                                    {social.label === "GitHub" && (
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                        </svg>
                                    )}
                                    {social.label === "LinkedIn" && (
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                        </svg>
                                    )}
                                    {social.label === "Portfolio" && (
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <circle cx="12" cy="12" r="10" />
                                            <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                                        </svg>
                                    )}
                                </span>
                                <span class="social-label">{social.label}</span>
                                <span class="social-arrow">↗</span>
                            </a>
                        ))
                    }
                </div>

                <!-- Email Display -->
                <div class="email-display reveal-contact">
                    <span class="email-label">Direct line</span>
                    <a
                        href={`mailto:${siteContent.contact.email}`}
                        class="email-link"
                    >
                        {siteContent.contact.email}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Decorative Elements -->
    <div class="corner-accent top-left" aria-hidden="true"></div>
    <div class="corner-accent bottom-right" aria-hidden="true"></div>
</section>

<style>
    .contact-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        background: linear-gradient(
            180deg,
            transparent 0%,
            rgba(16, 185, 129, 0.02) 50%,
            transparent 100%
        );
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .mesh-container {
        position: absolute;
        inset: 0;
        opacity: 0.4;
        pointer-events: none;
    }

    #contact-mesh {
        width: 100%;
        height: 100%;
    }

    .contact-content {
        position: relative;
        z-index: 10;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        padding: 6rem 2rem;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    /* Left Column */
    .contact-cta {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .availability-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.2);
        border-radius: 9999px;
        width: fit-content;
    }

    .pulse-dot {
        width: 8px;
        height: 8px;
        background: #10b981;
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.5;
            transform: scale(1.2);
        }
    }

    .badge-text {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #10b981;
    }

    .contact-heading {
        font-family: "Archivo Black", sans-serif;
        font-size: clamp(2.5rem, 6vw, 4.5rem);
        line-height: 1.1;
        margin: 0;
    }

    .contact-heading .line {
        display: block;
        opacity: 0;
        transform: translateY(40px);
        animation: revealLine 0.8s cubic-bezier(0.19, 1, 0.22, 1) forwards;
    }

    .contact-heading .line:nth-child(1) {
        animation-delay: 0.2s;
    }
    .contact-heading .line:nth-child(2) {
        animation-delay: 0.35s;
    }
    .contact-heading .line:nth-child(3) {
        animation-delay: 0.5s;
    }

    .contact-heading .accent {
        background: linear-gradient(135deg, #10b981, #34d399, #6ee7b7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    @keyframes revealLine {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .contact-subtext {
        font-size: 1.125rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.6);
        max-width: 500px;
    }

    .contact-methods {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }

    .primary-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        background: #10b981;
        color: #000;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 9999px;
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
        overflow: hidden;
        position: relative;
    }

    .primary-cta::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(45deg, #34d399, #10b981);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .primary-cta:hover::before {
        opacity: 1;
    }

    .primary-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 40px rgba(16, 185, 129, 0.3);
    }

    .cta-text,
    .cta-arrow {
        position: relative;
        z-index: 1;
    }

    .cta-arrow {
        transition: transform 0.3s;
    }

    .primary-cta:hover .cta-arrow {
        transform: translateX(4px);
    }

    .or-divider {
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .secondary-cta {
        font-size: 0.875rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.7);
        padding: 0.75rem 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 9999px;
        transition: all 0.3s;
    }

    .secondary-cta:hover {
        border-color: #10b981;
        color: #10b981;
        background: rgba(16, 185, 129, 0.05);
    }

    /* Right Column */
    .social-column {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .social-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .social-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 1rem;
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
        animation: fadeInCard 0.6s ease forwards;
        animation-delay: var(--delay);
        opacity: 0;
        transform: translateY(20px);
    }

    @keyframes fadeInCard {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .social-card:hover {
        background: rgba(16, 185, 129, 0.08);
        border-color: rgba(16, 185, 129, 0.3);
        transform: translateY(-4px) scale(1.02);
    }

    .social-icon {
        width: 24px;
        height: 24px;
        color: #10b981;
        flex-shrink: 0;
    }

    .social-icon svg {
        width: 100%;
        height: 100%;
    }

    .social-label {
        flex: 1;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.9);
    }

    .social-arrow {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.3);
        transition: all 0.3s;
    }

    .social-card:hover .social-arrow {
        color: #10b981;
        transform: translate(3px, -3px);
    }

    .email-display {
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        text-align: center;
    }

    .email-label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: rgba(255, 255, 255, 0.4);
        margin-bottom: 0.5rem;
    }

    .email-link {
        font-family: "JetBrains Mono", monospace;
        font-size: 1rem;
        color: #10b981;
        transition: opacity 0.2s;
    }

    .email-link:hover {
        opacity: 0.8;
    }

    /* Corner Accents */
    .corner-accent {
        position: absolute;
        width: 200px;
        height: 200px;
        border: 1px solid rgba(16, 185, 129, 0.1);
        pointer-events: none;
    }

    .corner-accent.top-left {
        top: 2rem;
        left: 2rem;
        border-right: none;
        border-bottom: none;
    }

    .corner-accent.bottom-right {
        bottom: 2rem;
        right: 2rem;
        border-left: none;
        border-top: none;
    }

    /* Reveal animations */
    .reveal-contact {
        opacity: 0;
        transform: translateY(30px);
        transition:
            opacity 0.8s cubic-bezier(0.19, 1, 0.22, 1),
            transform 0.8s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .reveal-contact.active {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .contact-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .contact-content {
            padding: 4rem 1.5rem;
        }
    }

    @media (max-width: 640px) {
        .contact-heading {
            font-size: 2rem;
        }

        .social-grid {
            grid-template-columns: 1fr;
        }

        .contact-methods {
            flex-direction: column;
            align-items: stretch;
        }

        .or-divider {
            text-align: center;
        }

        .primary-cta,
        .secondary-cta {
            justify-content: center;
            width: 100%;
        }
    }

    /* Light mode adjustments */
    :global(.light) .contact-section,
    :global(html:not(.dark)) .contact-section {
        background: linear-gradient(
            180deg,
            transparent 0%,
            rgba(16, 185, 129, 0.03) 50%,
            transparent 100%
        );
        border-top-color: rgba(0, 0, 0, 0.05);
    }

    :global(.light) .contact-subtext,
    :global(html:not(.dark)) .contact-subtext {
        color: rgba(0, 0, 0, 0.6);
    }

    :global(.light) .social-card,
    :global(html:not(.dark)) .social-card {
        background: rgba(0, 0, 0, 0.02);
        border-color: rgba(0, 0, 0, 0.08);
    }

    :global(.light) .social-label,
    :global(html:not(.dark)) .social-label {
        color: rgba(0, 0, 0, 0.9);
    }

    :global(.light) .social-arrow,
    :global(html:not(.dark)) .social-arrow {
        color: rgba(0, 0, 0, 0.3);
    }

    :global(.light) .email-display,
    :global(html:not(.dark)) .email-display {
        background: rgba(0, 0, 0, 0.02);
        border-color: rgba(0, 0, 0, 0.05);
    }

    :global(.light) .email-label,
    :global(html:not(.dark)) .email-label {
        color: rgba(0, 0, 0, 0.4);
    }

    :global(.light) .or-divider,
    :global(html:not(.dark)) .or-divider {
        color: rgba(0, 0, 0, 0.3);
    }

    :global(.light) .secondary-cta,
    :global(html:not(.dark)) .secondary-cta {
        color: rgba(0, 0, 0, 0.7);
        border-color: rgba(0, 0, 0, 0.2);
    }
</style>

<script>
    // Animated mesh background using Canvas
    function initContactMesh() {
        const canvas = document.getElementById(
            "contact-mesh",
        ) as HTMLCanvasElement;
        if (!canvas) return;

        const ctx = canvas.getContext("2d");
        if (!ctx) return;

        let animationId: number;
        let isVisible = true;

        // Observer for performance
        const observer = new IntersectionObserver(
            (entries) => {
                isVisible = entries[0].isIntersecting;
            },
            { threshold: 0.1 },
        );
        observer.observe(canvas);

        function resize() {
            const rect = canvas.parentElement?.getBoundingClientRect();
            if (!rect) return;
            canvas.width = rect.width;
            canvas.height = rect.height;
        }

        resize();
        window.addEventListener("resize", resize);

        // Particles for mesh effect
        interface Particle {
            x: number;
            y: number;
            vx: number;
            vy: number;
            size: number;
        }

        const particles: Particle[] = [];
        const particleCount = 50;

        for (let i = 0; i < particleCount; i++) {
            particles.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                vx: (Math.random() - 0.5) * 0.3,
                vy: (Math.random() - 0.5) * 0.3,
                size: Math.random() * 2 + 1,
            });
        }

        function draw() {
            if (!ctx || !isVisible) {
                animationId = requestAnimationFrame(draw);
                return;
            }

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Update and draw particles
            particles.forEach((p, i) => {
                p.x += p.vx;
                p.y += p.vy;

                // Wrap around
                if (p.x < 0) p.x = canvas.width;
                if (p.x > canvas.width) p.x = 0;
                if (p.y < 0) p.y = canvas.height;
                if (p.y > canvas.height) p.y = 0;

                // Draw connections
                particles.slice(i + 1).forEach((p2) => {
                    const dx = p.x - p2.x;
                    const dy = p.y - p2.y;
                    const dist = Math.sqrt(dx * dx + dy * dy);

                    if (dist < 150) {
                        ctx.beginPath();
                        ctx.moveTo(p.x, p.y);
                        ctx.lineTo(p2.x, p2.y);
                        ctx.strokeStyle = `rgba(16, 185, 129, ${0.15 * (1 - dist / 150)})`;
                        ctx.lineWidth = 0.5;
                        ctx.stroke();
                    }
                });

                // Draw particle
                ctx.beginPath();
                ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                ctx.fillStyle = "rgba(16, 185, 129, 0.4)";
                ctx.fill();
            });

            animationId = requestAnimationFrame(draw);
        }

        draw();

        // Cleanup on page transition
        document.addEventListener("astro:before-swap", () => {
            cancelAnimationFrame(animationId);
            observer.disconnect();
            window.removeEventListener("resize", resize);
        });
    }

    // Reveal animations
    function initContactReveal() {
        const elements = document.querySelectorAll(".reveal-contact");
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.classList.add("active");
                        }, index * 100);
                    }
                });
            },
            { threshold: 0.1 },
        );

        elements.forEach((el) => observer.observe(el));
    }

    initContactMesh();
    initContactReveal();

    document.addEventListener("astro:page-load", () => {
        initContactMesh();
        initContactReveal();
    });
</script>
