---
import { siteContent } from "@/content/site-content";
---

<footer
    class="border-t border-black/10 dark:border-white/10 py-12 px-4 md:px-8"
>
    <div class="max-w-[1400px] mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Brand -->
            <div>
                <a href="/" class="font-display text-xl tracking-tight">
                    Bharath<span class="text-signal-emerald">.</span>
                </a>
                <p
                    class="mt-3 text-sm text-gray-500 dark:text-gray-400 max-w-xs"
                >
                    Building impactful software solutions and contributing to
                    open-source.
                </p>
            </div>

            <!-- Navigation -->
            <div>
                <h4
                    class="text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-4"
                >
                    Navigate
                </h4>
                <nav class="flex flex-col gap-2">
                    {
                        siteContent.navigation.slice(0, 5).map((item) => (
                            <a
                                href={item.href}
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-signal-emerald transition-colors"
                            >
                                {item.label}
                            </a>
                        ))
                    }
                </nav>
            </div>

            <!-- Socials -->
            <div>
                <h4
                    class="text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-4"
                >
                    Connect
                </h4>
                <div class="flex flex-wrap gap-3">
                    {
                        siteContent.contact.socials.map((social) => (
                            <a
                                href={social.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-xs font-medium border border-black/10 dark:border-white/10 hover:border-signal-emerald hover:text-signal-emerald transition-all duration-200"
                            >
                                {social.label}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- Bottom bar -->
        <div
            class="mt-12 pt-8 border-t border-black/5 dark:border-white/5 flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <p class="text-xs text-gray-400 dark:text-gray-500">
                &copy; {new Date().getFullYear()} Bharathkumar Palanisamy. Built with
                Astro.
            </p>
            <div
                class="flex items-center gap-2 text-xs text-gray-400 dark:text-gray-500"
            >
                <span
                    class="inline-flex h-2 w-2 rounded-full bg-signal-emerald animate-pulse"
                ></span>
                Available for opportunities
            </div>
        </div>
    </div>
</footer>
