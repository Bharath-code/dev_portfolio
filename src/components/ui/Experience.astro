---
interface ExperienceItem {
  company: string;
  role: string;
  period: string;
  description: string;
}

interface Props {
  items: ExperienceItem[];
}

const { items } = Astro.props;
---

<div class="relative space-y-24 before:absolute before:left-0 before:top-4 before:h-[calc(100%-1rem)] before:w-[1px] before:bg-black/10 dark:before:bg-white/10 md:before:left-[200px]">
  {items.map((item) => (
    <div class="relative flex flex-col md:flex-row gap-8 md:gap-16">
      <!-- Period Column -->
      <div class="md:w-[200px] shrink-0">
        <div class="md:pr-12 md:text-right">
           <span class="text-sm font-medium uppercase tracking-widest text-signal-emerald">
            {item.period}
          </span>
        </div>
      </div>

      <!-- Content Column -->
      <div class="flex-1 relative">
        <!-- Dot on the line -->
        <div class="absolute -left-[32px] md:-left-[64px] top-1.5 flex h-4 w-4 items-center justify-center rounded-full bg-void-black dark:bg-white ring-4 ring-tech-white dark:ring-void-black">
          <div class="h-1.5 w-1.5 rounded-full bg-signal-emerald"></div>
        </div>

        <div class="group">
          <div class="flex flex-col mb-4">
            <h3 class="font-display text-2xl md:text-3xl text-black dark:text-white group-hover:text-signal-emerald transition-colors duration-300">
              {item.company}
            </h3>
            <span class="text-lg font-medium text-black/60 dark:text-white/60">
              {item.role}
            </span>
          </div>
          
          <div class="max-w-2xl">
            <p class="text-lg leading-relaxed text-black/80 dark:text-white/80">
              {item.description}
            </p>
          </div>
        </div>
      </div>
    </div>
  ))}
</div>
