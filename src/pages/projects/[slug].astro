---
import Layout from "@/layouts/Layout.astro";
import Heading from "@/components/ui/Heading.astro";
import NextProject from "@/components/ui/NextProject.astro";
import { siteContent, getProjectBySlug, getAllProjectSlugs, getNextProject, type Project } from "@/content/site-content";
import { ArrowLeft, ExternalLink, Github } from "lucide-react";

export function getStaticPaths() {
    const slugs = getAllProjectSlugs();
    return slugs.map(slug => ({
        params: { slug }
    }));
}

const { slug } = Astro.params;
const project = getProjectBySlug(slug as string);

if (!project) {
    return Astro.redirect('/404');
}

const spotlight = project.spotlight;
const nextProject = getNextProject(slug as string);
---

<Layout 
    title={`${project.title} | Bharath`} 
    description={project.description}
    ogImage={`/og/${project.slug}.png`}
>
    <!-- Schema.org SoftwareApplication for AEO -->
    <script type="application/ld+json" is:inline define:vars={{ project }}>
        {
            "@context": "https://schema.org",
            "@type": "SoftwareApplication",
            "name": project.title,
            "description": project.description,
            "applicationCategory": "DeveloperApplication",
            "operatingSystem": "Cross-platform",
            "author": {
                "@type": "Person",
                "name": "Bharathkumar Palanisamy",
                "url": "https://www.bharathkumar.dev"
            },
            "url": `https://www.bharathkumar.dev/projects/${project.slug}`
        }
    </script>
    <div class="pt-32 pb-20 px-4 md:px-8">
        <div class="max-w-[1000px] mx-auto">
            <!-- Back navigation -->
            <a 
                href="/#work" 
                class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-signal-emerald transition-colors mb-8 reveal"
            >
                <ArrowLeft className="w-4 h-4" />
                Back to work
            </a>

            <!-- Header -->
            <header class="mb-16 reveal">
                <div class="flex flex-wrap gap-2 mb-4">
                    {project.badges.map((badge) => (
                        <span class="px-3 py-1 text-xs font-bold uppercase tracking-wider bg-signal-emerald/10 text-signal-emerald rounded-full">
                            {badge}
                        </span>
                    ))}
                </div>
                <Heading as="h1" variant="display" class="mb-4">
                    {project.title}
                </Heading>
                <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl">
                    {project.description}
                </p>
                <div class="flex gap-4 mt-6">
                    <a 
                        href={project.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-black dark:bg-white text-white dark:text-black text-sm font-medium hover:scale-105 transition-transform"
                    >
                        <Github className="w-4 h-4" />
                        View on GitHub
                    </a>
                </div>
            </header>

            {spotlight && (
                <>
                    <!-- Spotlight Section -->
                    <section class="mb-16 reveal">
                        <h2 class="text-2xl font-display mb-4">{spotlight.headline}</h2>
                        <p class="text-gray-600 dark:text-gray-400 mb-6">{spotlight.overview}</p>
                        
                        <div class="flex flex-wrap gap-2 mb-8">
                            {spotlight.roles.map((role) => (
                                <span class="px-3 py-1 text-xs rounded-full border border-black/10 dark:border-white/10 text-gray-600 dark:text-gray-400">
                                    {role}
                                </span>
                            ))}
                        </div>
                    </section>

                    <!-- Highlights -->
                    <section class="mb-16 reveal">
                        <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-6">
                            Highlights
                        </h3>
                        <ul class="space-y-3">
                            {spotlight.highlights.map((highlight) => (
                                <li class="flex items-start gap-3">
                                    <span class="mt-1.5 w-2 h-2 rounded-full bg-signal-emerald flex-shrink-0"></span>
                                    <span class="text-gray-700 dark:text-gray-300">{highlight}</span>
                                </li>
                            ))}
                        </ul>
                    </section>

                    <!-- Outcomes -->
                    <section class="mb-16 reveal">
                        <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-6">
                            Outcomes
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            {spotlight.outcomes.map((outcome) => (
                                <div class="p-4 border border-black/10 dark:border-white/10 rounded-lg">
                                    <div class="text-2xl font-display text-signal-emerald">{outcome.value}</div>
                                    <div class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider mt-1">{outcome.label}</div>
                                </div>
                            ))}
                        </div>
                    </section>

                    <!-- Walkthrough -->
                    {spotlight.walkthrough.length > 0 && (
                        <section class="mb-16 reveal">
                            <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-6">
                                Code Walkthrough
                            </h3>
                            <div class="space-y-8">
                                {spotlight.walkthrough.map((step, i) => (
                                    <div class="border border-black/10 dark:border-white/10 rounded-lg overflow-hidden">
                                        <div class="p-4 border-b border-black/10 dark:border-white/10 bg-black/5 dark:bg-white/5">
                                            <div class="flex items-center justify-between">
                                                <span class="font-medium">{i + 1}. {step.label}</span>
                                                <span class="text-xs text-signal-emerald">{step.metricLabel}: {step.metricValue}</span>
                                            </div>
                                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{step.summary}</p>
                                        </div>
                                        <div class="relative">
                                            <pre class="p-4 text-sm overflow-x-auto bg-void-black text-gray-300"><code class={`language-${step.language}`}>{step.code}</code></pre>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </section>
                    )}

                    <!-- Sandbox -->
                    <section class="reveal">
                        <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-6">
                            {spotlight.sandbox.title}
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400 mb-4">{spotlight.sandbox.description}</p>
                        <a 
                            href={spotlight.sandbox.src}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-signal-emerald hover:underline"
                        >
                            Open in new tab <ExternalLink className="w-4 h-4" />
                        </a>
                    </section>
                </>
            )}
        </div>
    </div>
    {nextProject && <NextProject project={nextProject} />}
</Layout>
