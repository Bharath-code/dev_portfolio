---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/ui/Hero.astro";
import ProjectCard from "@/components/ui/ProjectCard.astro";
import Experience from "@/components/ui/Experience.astro";
import Heading from "@/components/ui/Heading.astro";
import Skills from "@/components/ui/Skills.astro";
import { ImpactMetrics } from "@/components/ui/ImpactMetrics";
import { siteContent } from "@/content/site-content";
import { ArrowUpRight } from "lucide-react";
---

<Layout title="Bharath | Senior Frontend Architect">
    <Hero />

    <section class="px-4 py-20 md:px-8 border-b border-white/10">
        <div class="mx-auto max-w-[1000px] text-center">
            <Heading variant="section">Skills & Technologies</Heading>
            <div class="mt-8">
                <Skills items={siteContent.skills} />
            </div>
        </div>
    </section>

    <section class="px-4 py-20 md:px-8 bg-surface-dark/50">
        <div class="mx-auto max-w-[1400px]">
            <div class="mb-16">
                <Heading variant="section">Engineered Impact</Heading>
                <p class="max-w-xl text-lg text-gray-400">
                    Measurable results from systems I've architected and teams
                    I've led.
                </p>
            </div>
            <ImpactMetrics
                metrics={siteContent.impactHighlights}
                client:visible
            />
        </div>
    </section>

    <section id="work" class="px-4 py-32 md:px-8">
        <div class="mx-auto max-w-[1400px]">
            <div
                class="mb-20 flex flex-col md:flex-row md:items-end justify-between gap-6"
            >
                <div>
                    <Heading variant="section">Selected Work</Heading>
                    <p class="max-w-xl text-lg text-gray-400">
                        Architectural initiatives and developer tooling that
                        solve scale.
                    </p>
                </div>
                <a
                    href="https://github.com/Bharath-code"
                    target="_blank"
                    class="text-signal-emerald hover:text-white transition-colors flex items-center gap-2"
                >
                    View GitHub <ArrowUpRight className="w-4 h-4" />
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    siteContent.projects.map((project) => (
                        <ProjectCard {...project} />
                    ))
                }
            </div>
        </div>
    </section>

    <section id="experience" class="px-4 py-32 md:px-8 bg-surface-dark/30">
        <div class="mx-auto max-w-[1000px]">
            <div class="mb-20 text-center">
                <Heading variant="section">Experience</Heading>
                <p class="text-gray-400">
                    A timeline of technical leadership and delivery.
                </p>
            </div>
            <Experience items={siteContent.experience} />
        </div>
    </section>

    <section
        class="h-[30vh] flex items-center justify-center border-t border-white/10"
    >
        <div class="text-center">
            <h2 class="font-display text-4xl mb-6">Ready to scale?</h2>
            <a
                href="mailto:kumarbharath63@icloud.com"
                class="inline-flex items-center gap-2 overflow-hidden rounded-full bg-white px-8 py-4 text-black transition-transform hover:scale-105 active:scale-95 font-medium"
            >
                Start a Conversation
            </a>
        </div>
    </section>
</Layout>
